{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 80,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "src/**/*.js",
      "options": {
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": "src/**/*.vue",
      "options": {
        "semi": true,
        "singleQuote": true
      }
    }
  ]
}
